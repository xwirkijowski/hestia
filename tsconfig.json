{
  "compilerOptions": {
    "baseUrl": "src/",
    "paths": {
      "@/*": ["./src/*"],
      "@act/*": ["actions/*"],
      "@comp/*": ["components/*"],
      "@type/*": ["type/*"],
      "@ctx/*": ["contexts/*"],
      "@utils/*": ["utils/*"],
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
